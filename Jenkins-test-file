pipeline {

    agent any

    stages {
       
        stage('build app') {
            steps {
                script {
                    echo 'building the application...'
                
                }
            }
        }
        stage('test image') {
            steps {
                script {
                    echo "building the docker image..."
                    
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo 'deploying docker image...'
                }
            }
        }
        
    }
}
